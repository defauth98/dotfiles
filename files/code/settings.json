{
  //Tailwind
  "css.validate": false,
  "tailwindCSS.includeLanguages": {
    "plaintext": "html"
  },
  "tailwindCSS.emmetCompletions": true,

  // Workbench configs
  // "workbench.activityBar.visible": false,
  "workbench.startupEditor": "newUntitledFile",
  "window.zoomLevel": 0,

  // Editor
  "editor.quickSuggestions": true,
  "editor.fontFamily": "'Jetbrains Mono', 'monospace', monospace, 'Droid Sans Fallback'",
  "editor.fontWeight": "400",
  "editor.fontSize": 17,
  "editor.fontLigatures": true,
  "editor.lineHeight": 24,
  "editor.tabSize": 2,
  "editor.renderLineHighlight": "gutter",
  "breadcrumbs.enabled": true,
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "editor.formatOnSave": true,
  "editor.minimap.enabled": false,
  "editor.largeFileOptimizations": true,
  "[markdown]": {
    "editor.wordWrap": "on"
  },
  // "editor.suggestSelection": "first",
  "editor.linkedEditing": true,

  // Explorer and extensions
  "explorer.compactFolders": false,
  "extensions.ignoreRecommendations": true,
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "node_modules": true
  },
  "files.associations": {
    ".sequelizerc": "javascript",
    ".stylelintrc": "json",
    ".prettierrc": "json",
    "*.vim": "shellscript"
  },

  // Javscript and typescript
  "typescript.tsserver.log": "verbose",
  "javascript.suggest.autoImports": true,
  "typescript.suggest.autoImports": true,
  "javascript.updateImportsOnFileMove.enabled": "always",

  // ESlint
  "eslint.packageManager": "yarn",
  "eslint.codeActionsOnSave.mode": "all",
  "prettier.singleQuote": true,
  "prettier.trailingComma": "es5",
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],

  // Prettier
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[yaml]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // Live server and settings sync
  "liveServer.settings.donotShowInfoMsg": true,
  "screencastMode.onlyKeyboardShortcuts": true,
  "sync.autoDownload": true,
  "sync.autoUpload": true,
  "sync.quietSync": true,

  // Integrated terminal
  "terminal.integrated.shell.linux": "/bin/zsh",
  "terminal.integrated.fontSize": 16,

  // Emmet
  "emmet.triggerExpansionOnTab": true,
  "emmet.showExpandedAbbreviation": "always",
  "editor.tabCompletion": "off",
  "emmet.excludeLanguages": [],
  "emmet.includeLanguages": {
    "markdown": "html"
  },
  "emmet.showSuggestionsAsSnippets": true,
  "emmet.syntaxProfiles": {
    "javascript": "jsx"
    // "javascript": "html"
  },

  // Settings sync
  "sync.gist": "c3b3704c8ca10f01561de3fc1279bf4d",

  // Advanced new files
  "advancedNewFile.exclude": {
    "node_modules": true,
    "node_modules_electron": true,
    "dev": true,
    "dist": true
  },
  "advancedNewFile.showInformationMessages": true,
  "advancedNewFile.convenienceOptions": ["last", "current", "root"],

  // Material icon theme
  "material-icon-theme.activeIconPack": "nest",
  "material-icon-theme.folders.associations": {
    "infra": "app",
    "entities": "class",
    "schemas": "class",
    "typeorm": "database",
    "repositories": "mappings",
    "http": "container",
    "migrations": "tools",
    "modules": "components",
    "implementations": "core",
    "dtos": "typescript",
    "fakes": "mock",
    "websockets": "pipe",
    "protos": "pipe",
    "grpc": "pipe"
  },

  "material-icon-theme.files.associations": {
    "ormconfig.json": "database",
    "tsconfig.json": "tune",
    "*.proto": "3d",
    "*.vim": "vim"
  },

  // Speel check
  "cSpell.language": "en,pt_BR",
  "cSpell.userWords": [
    "Alacritty",
    "Archivo",
    "Borderless",
    "INET",
    "Ionicons",
    "Pariquera",
    "Tearcher",
    "Tognnet",
    "Zshell",
    "animationend",
    "bordertopleft",
    "browserslist",
    "darkmagenta",
    "divs",
    "gmail",
    "knexfile",
    "leds",
    "mkdir",
    "pacman",
    "proffys",
    "respawn",
    "secundary",
    "signin",
    "smallname",
    "tsnd",
    "whatsapp",
    "trybe"
  ],
  "cSpell.languageSettings": [],
  "tabnine.experimentalAutoImports": true,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "git.autofetch": true,

  // Git Lens
  "gitlens.currentLine.enabled": false,
  "gitlens.hovers.currentLine.over": "line",
  "editor.wordWrap": "on",
  "git.enableSmartCommit": true,
  "vscode-neovim.neovimExecutablePaths.linux": "/usr/bin/nvim",
  "workbench.sideBar.location": "left",
  "vscode-neovim.neovimInitVimPaths.linux": "/home/defauth/.config/nvim/init.vim",

  "workbench.editor.showTabs": true,

  "workbench.list.automaticKeyboardNavigation": false,
  "editor.cursorBlinking": "solid",
  "terminal.external.linuxExec": "/usr/bin/alacritty",

  "material-icon-theme.showWelcomeMessage": false,
  "editor.snippetSuggestions": "bottom",
  "liveServer.settings.donotVerifyTags": true,
  "gitlens.codeLens.recentChange.enabled": false,
  "gitlens.codeLens.enabled": false,
  "window.menuBarVisibility": "toggle",
  "workbench.colorTheme": "Omni",
  "workbench.iconTheme": "material-icon-theme"
}
